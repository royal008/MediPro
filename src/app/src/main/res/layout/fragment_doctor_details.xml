<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.medipro.Fragment.DoctorDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_gravity="center"
            android:padding="@dimen/very_small_text"/>
        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/large_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/very_small_text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:padding="@dimen/mini_text"
                />
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:padding="@dimen/mini_text"
                />

            <ImageView
                android:id="@+id/iv_three_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mini_text"
                android:src="@drawable/small_ellipsis_white" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/doctordetails"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctor_list"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/small_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="@dimen/small_text"
                android:text="Dr.Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="@dimen/small_text"
                android:text="Cardiologist"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/mini_text">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/smaller_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Yrs"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/smaller_text"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/smaller_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 600"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/smaller_text"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultation Fees"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/smaller_text"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/smaller_text"
        android:layout_marginRight="@dimen/smaller_text"
        android:layout_marginTop="@dimen/smaller_text"
        android:padding="@dimen/mini_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textSize="@dimen/small_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address line 1"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/smaller_text"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address line 2"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/smaller_text"
            android:layout_marginTop="1dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map"
            android:layout_marginTop="@dimen/mini_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/smaller_text"
            android:layout_marginRight="@dimen/smaller_text"
            android:layout_marginTop="@dimen/very_small_text"
            android:padding="@dimen/mini_text">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visiting Timing"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="@dimen/small_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MON \t  06:30 am - 07.30 am"
                android:textColor="@color/gray"
                android:textSize="@dimen/smaller_text"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TUE \t  06:30 am - 07.30 am"
                android:textColor="@color/gray"
                android:textSize="@dimen/smaller_text"
                android:layout_marginTop="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WED \t  06:30 am - 07.30 am"
                android:textColor="@color/gray"
                android:textSize="@dimen/smaller_text"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.26"
        android:text="BOOK APPOINTMENT"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/upload_background_color" />

</LinearLayout>
