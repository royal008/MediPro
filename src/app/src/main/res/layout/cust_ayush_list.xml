<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="@dimen/very_small_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/mini_text"
        android:background="@color/white">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/doctor_list"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/medium_text"
            android:layout_gravity="center"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr.Name"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/smaller_text"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homeopathy"
                android:layout_marginLeft="@dimen/smaller_text"
                android:textSize="@dimen/smaller_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guindi,Chennai"
                android:layout_marginLeft="@dimen/smaller_text"
                android:textSize="@dimen/very_small_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:paddingLeft="@dimen/medium_text"
                android:paddingRight="@dimen/medium_text"
                android:paddingTop="@dimen/mini_text"
                android:paddingBottom="@dimen/mini_text"
                android:background="@drawable/blue_curved_rectangle"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
