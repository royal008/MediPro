<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_size"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/white"
        android:layout_margin="2dp">
        <ImageView
            android:id="@+id/iv_grid_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/shopping_fitnessequipments"
            android:layout_marginTop="@dimen/smaller_text"/>

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness \nManagement"
            android:layout_marginTop="@dimen/smaller_text"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/very_small_text"
            android:layout_marginBottom="@dimen/small_text"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </LinearLayout>



</LinearLayout>