<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medipro.Fragment.ShoppingFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/ad_common"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:padding="@dimen/very_small_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_search"
                    android:padding="@dimen/very_small_text"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smal_cart"
                    android:padding="@dimen/very_small_text"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="SHOPPING"
            android:textColor="@color/white"
            android:textSize="@dimen/xlarge_text"
            android:layout_marginLeft="@dimen/large_text"
            android:layout_marginTop="@dimen/medium_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_upload_prescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="@dimen/mini_text"
        android:paddingBottom="@dimen/mini_text">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/smaller_text"
            android:src="@drawable/general_uploadprescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/very_small_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order with prescription"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Buy Upto 20% Discount!"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="@dimen/smaller_text"
                android:layout_gravity="left"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_curved_rectangle"
            android:text="UPLOAD"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            android:paddingTop="@dimen/very_small_text"
            android:paddingBottom="@dimen/very_small_text"
            android:layout_marginRight="@dimen/very_small_text"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
    <com.medipro.Common.ExpandableGridView
        android:id="@+id/gv_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/small_text"
        android:layout_marginRight="@dimen/small_text"
        android:layout_marginTop="@dimen/small_text"
        android:numColumns="4"

        >

    </com.medipro.Common.ExpandableGridView>

</LinearLayout>
</LinearLayout>