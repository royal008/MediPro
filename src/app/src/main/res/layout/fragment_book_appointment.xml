<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medipro.Fragment.BookAppointmentFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/finddoctors"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:padding="@dimen/very_small_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_search"
                    android:padding="@dimen/very_small_text"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter_white"
                    android:padding="@dimen/very_small_text"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="FIND DOCTORS,"
            android:textColor="@color/white"
            android:textSize="@dimen/xlarge_text"
            android:layout_marginLeft="@dimen/medium_text"
            android:layout_marginTop="@dimen/medium_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Clinics, hospitals, specialites"
            android:textColor="@color/white"
            android:textSize="@dimen/smaller_text"
            android:alpha=".7"
            android:layout_marginLeft="@dimen/medium_text"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_find_doctors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:divider="@null"
        android:layout_marginTop="@dimen/mini_text">

    </ListView>

</LinearLayout>
